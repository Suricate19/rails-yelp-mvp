<H1>Add a new RESTAURANT FORM</H1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :category %>
  <%= f.select :category, %w[chinese italian japanese french belgian] %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', restaurants_path, class:"btn btn-primary" %>
